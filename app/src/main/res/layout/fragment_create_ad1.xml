<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient1">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="675dp"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_title"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:autofillHints=""
            android:background="@drawable/text_box_shape"
            android:hint="@string/title_hint"
            android:inputType="text"
            android:padding="7dp"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/rental_value"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rent_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:autofillHints=""
            android:background="@drawable/text_box_shape"
            android:hint="@string/rental_value_hint"
            android:inputType="numberDecimal"
            android:padding="7dp"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/condo_value"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cond_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:autofillHints=""
            android:background="@drawable/text_box_shape"
            android:hint="@string/condo_value_hint"
            android:inputType="numberDecimal"
            android:padding="7dp"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/maximum_of_clients"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/clients_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:autofillHints=""
            android:background="@drawable/text_box_shape"
            android:hint="@string/maximum_of_clients_hint"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:autofillHints=""
            android:background="@drawable/text_box_shape"
            android:gravity="top"
            android:hint="@string/description_hint"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="7dp"
            android:scrollbars="vertical"
            android:textColor="@color/gray"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_box_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/upload_icon_description"
                android:src="@drawable/update_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_photos"
                android:textColor="@color/blue3"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ad1_proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/blue4"
            android:text="@string/proceed"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



